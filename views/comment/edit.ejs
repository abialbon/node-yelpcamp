<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2>Edit your review</h2>
      <form action="/campgrounds/<%= campid %>/comment/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
          <label for="comment">Comment</label>
          <input class="form-control" type="text" name="comment" id="comment" value="<%= comment.text %>" required></input>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Edit</button>
        </div>
      </form>
    </div>
      
  </div>
</div>

<% include ../partials/footer %>