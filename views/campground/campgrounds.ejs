<% include ../partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Listed campgrounds</h1>
      <p>View all our hand-picked campgrounds!</p>
      <p><a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground</a></p>
    </div>
  </header>


<div class="row" style="display: flex; flex-wrap: wrap;">
  <% campgrounds.forEach((camp) =>{ %>
  <div class="col-md-3 col-sm-6">
    <div class="thumbnail">
      <img src="<%= camp.image %>"></img>
        <div class="caption">
          <h4><%= camp.name %></h4>
          <p><a class="btn btn-info" href="/campgrounds/<%= camp.id %>">View more info</a></p>
        </div>
    </div>

  </div>
  <% }) %>
</div>

<div><a class="btn btn-danger" href="/">Back</a></div>


</div>
<% include ../partials/footer %>